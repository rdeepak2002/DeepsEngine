{
  "name": "editor",
  "version": "1.0.0",
  "description": "",
  "main": "dist/electron.js",
  "scripts": {
    "clean": "echo \"Cleaning...\" && cmake-js -d ../engine clean && rm -rf ./dist",

    "build-electron": "echo \"Building Electron...\" && (tsc ./src/electron.ts) && (mv ./src/electron.js ./dist/electron.js)",
    "build-react": "echo \"Building React...\" && webpack --config ./webpack.config.js",
    "build-engine": "echo \"Building Engine...\" && cmake-js -d ../engine compile",
    "build-all": "echo \"Building All...\" && yarn build-engine && yarn build-react && yarn build-electron",

    "launch-electron": "echo \"Luanching Electron...\" && electron dist/electron.js",

    "preinstall": "yarn clean && yarn build-all",

    "prestart": "yarn",
    "start": "yarn launch-electron",

    "prestart-editor": "yarn build-react && yarn build-electron",
    "start-editor": "yarn launch-electron"
  },
  "author": "Deepak Ramalingam",
  "license": "ISC",
  "dependencies": {
    "fs": "^0.0.1-security",
    "node-addon-api": "^4.2.0"
  },
  "devDependencies": {
    "@types/react": "^17.0.35",
    "@types/react-dom": "^17.0.11",
    "cmake-js": "^6.2.1",
    "electron": "^16.0.1",
    "html-webpack-plugin": "^5.5.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.2",
    "webpack": "^5.64.1",
    "webpack-cli": "^4.9.1"
  }
}
